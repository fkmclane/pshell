#!/bin/sh
if [ "$HOSTNAME" == "user001" ]; then
	if [ -n "$1" ]; then
		args="$@"
	else
		args="-l walltime=1:00:00"
	fi

	jobid="$(echo "$(qsub $args -o /dev/null -j oe "$@" -- "$HOME"/.local/bin/pshell "$DISPLAY")" | cut -d. -f1)"
	echo "Job ID: $jobid"
	until tmux has-session -t "$jobid" 2>/dev/null; do sleep 1; done
	exec tmux attach -t "$jobid"
else
	jobid="$(echo "$PBS_JOBID" | cut -d. -f1)"
	exec ssh -R 4444:localhost:22 user001 export DISPLAY="$1"\; tmux new-session -s "$jobid" -d ssh -p 4444 localhost\; while tmux has-session -t "$jobid" 2\>/dev/null \; do sleep 1\; done
fi
